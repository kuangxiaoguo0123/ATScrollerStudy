<?xml version="1.0" encoding="utf-8"?>
<com.asiatravel.atscrollerstudy.ScrollerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asiatravel.atscrollerstudy.MainActivity">

    <Button
        android:id="@+id/scroller_to_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="scrollTo" />

    <Button
        android:id="@+id/scroller_by_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="scrollerBy" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Third view" />
</com.asiatravel.atscrollerstudy.ScrollerLayout>
